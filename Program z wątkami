#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <pthread.h>

int licznik=0;
void* Napis (int numer)
{
	int pom=0, k, j;
	k = rand () % 10001;
	for (j=0; j<k; j++)
	{
		printf ("Watek %d iteracja %d\n", numer, j);
		licznik++;
	}
}
int main (void)
{
	srand((unsigned int)time(NULL));
	int i;
	pthread_t watki[10];
	for (i=0; i<10; i++)
	{
		errno = pthread_create(&watki[i], NULL, Napis, NULL)
		errno = pthread_join (watki[i], NULL);
	}
	printf ("Liczba wszystkich iteracji wywolanej przez wszysktie wÄ…tki: %d\n", licznik);
	return 0;
}
